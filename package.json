{
	"name": "omni",
	"version": "0.2.0",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.3.6",
	"scripts": {
		"dev": "turbo run dev",
		"start": "turbo run start",
		"build": "turbo run build",
		"build:skills": "turbo run build:skills",
		"check": "turbo run lint",
		"type-check": "turbo run type-check",
		"test": "turbo run test",
		"dev:admin": "turbo run dev --filter=@omni/admin",
		"dev:bot": "turbo run dev --filter=@omni/bot",
		"dev:worker": "turbo run dev --filter=@omni/worker",
		"prepare": "husky"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"husky": "^9.1.7",
		"turbo": "^2.7.5"
	}
}
